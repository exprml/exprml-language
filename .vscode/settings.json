{
  "json.schemas": [
    {
      "fileMatch": [
        "**/example.json",
      ],
      "url": "./schema.json"
    },
    {
      "fileMatch": [
        "schema.json"
      ],
      "url": "http://json-schema.org/draft-07/schema#"
    }
  ],
  "yaml.schemas": {
    "./schema.json": [
      "**/example.yaml"
    ],
    "http://json-schema.org/draft-07/schema#": [
      "schema.yaml",
    ]
  }
}